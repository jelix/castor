{
    "name": "jelix/castor",
    "type": "library",
    "description": "A template engine using a simple syntax",
    "keywords": ["template"],
    "homepage": "http://jelix.org",
    "license": "LGPL-2.1",
    "authors": [
        {
            "name": "Laurent Jouanneau",
            "email": "laurent@jelix.org"
        },
        {
            "name": "Loic Mathaud"
        }
    ],
    "require": {
        "php": ">=8.2 <8.4",
        "jelix/simplelocalization": "1.7.*"
    },
    "require-dev" : {
        "phpunit/phpunit": "9.6.*"
    },
    "archive": {
        "exclude": ["/tests", "/docs"]
    },
    "replace": {
    },
    "autoload": {
        "psr-4" : {
            "Jelix\\Castor\\" : "lib/Castor/"
        }
    },
    "extra" : {
        "branch-alias": {
            "dev-master": "2.0-dev",
            "1.x": "1.1-dev"
        }
    },
    "minimum-stability": "stable"
}
